<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/controller_main">

    <ImageView
        android:id="@+id/showStoryImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:layout_gravity="bottom"
        android:visibility="invisible"
        tools:src="@color/imagePlaceholder"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/showStoryButton"
        style="@style/OutlineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="64dp"
        android:background="@drawable/button_border_accent"
        android:text="@string/open_story_cta"
        android:textColor="@color/colorAccent"
        android:visibility="invisible"
        tools:visibility="visible" />

</merge>